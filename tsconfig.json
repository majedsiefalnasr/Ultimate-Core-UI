{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "declaration": true,
    "declarationDir": "./dist",
    "jsx": "preserve",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "vitest/globals"
    ]
  },
  "include": [
    "src/**/*.{ts,tsx,vue}",
    "tests/**/*.{ts,tsx}"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "storybook-static"
  ]
}
