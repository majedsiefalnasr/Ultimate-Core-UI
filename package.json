{
  "name": "ultimate-core-ui",
  "version": "0.1.2",
  "description": "Ultimate core UI Library is a Vue 3-based component library built on top of Vuetify for modern and responsive UIs.",
  "main": "dist/ultimate-core-ui.umd.js",
  "module": "dist/ultimate-core-ui.es.js",
  "exports": {
    ".": {
      "import": "./dist/ultimate-core-ui.es.js",
      "require": "./dist/ultimate-core-ui.umd.cjs",
      "types": "./dist/index.d.ts"
    },
    "./style.css": "./dist/style.css",
    "./components": {
      "import": "./dist/src/components/index.d.ts",
      "types": "./dist/src/components/index.d.ts"
    },
    "./components/*": "./dist/src/components/*",
    "./avatars": {
      "import": "./dist/src/avatars/index.d.ts",
      "types": "./dist/src/avatars/index.d.ts"
    },
    "./avatars/*": "./dist/src/avatars/*",
    "./snippets": "./src/snippets/",
    "./snippets/*": "./src/snippets/*.code-snippets"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run build:clean && vite build && vue-tsc -p tsconfig.build.json --declaration --emitDeclarationOnly",
    "build:clean": "rimraf dist",
    "build:types": "vue-tsc -p tsconfig.build.json --declaration --emitDeclarationOnly",
    "prepare": "husky install",
    "lint": "eslint --ext .js,.ts,.vue src --report-unused-disable-directives --max-warnings=0",
    "lint:fix": "eslint --ext .js,.ts,.vue src --fix",
    "format": "prettier --write \"src/**/*.{js,ts,vue,scss,css,json,md}\"",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "playground": "npm run build:clean && npm run build && npm --prefix playground run dev",
    "playground:watch": "npm run build:clean && npm run build && concurrently -k \"npm run build -- --watch\" \"npm --prefix playground run dev\"",
    "clean": "npm run build:clean && rimraf node_modules .turbo .vite .cache"
  },
  "peerDependencies": {
    "@iconify/vue": "^4.0.0",
    "vue": "^3.5.0",
    "vuetify": "^3.11.2"
  },
  "devDependencies": {
    "@iconify-json/hugeicons": "^1.2.17",
    "@iconify/vue": "^5.0.0",
    "@mdi/font": "^7.4.47",
    "@storybook/addon-a11y": "^9.1.10",
    "@storybook/addon-docs": "9.1.10",
    "@storybook/addon-links": "^9.1.10",
    "@storybook/vue3-vite": "^9.1.10",
    "@testing-library/vue": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@vitejs/plugin-vue": "^5.1.2",
    "@vue/test-utils": "^2.4.6",
    "concurrently": "^8.2.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-vue": "^9.11.0",
    "husky": "^8.0.0",
    "jsdom": "^27.0.0",
    "lint-staged": "^13.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "sass": "^1.77.0",
    "typescript": "5.3.3",
    "vite": "^5.2.0",
    "vite-plugin-dts": "^4.0.0",
    "vitest": "^1.6.0",
    "vue-eslint-parser": "^9.1.0",
    "vue-tsc": "^3.1.1"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{scss,css,json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "vue3",
    "vuetify",
    "ui-library",
    "vite",
    "storybook",
    "ultimate-core-ui"
  ],
  "author": "Majed Sief Alnasr @Ultimate-Solutions",
  "license": "MIT",
  "packageManager": "npm@9.8.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/majedsiefalnasr/Ultimate-Core-UI.git"
  },
  "dependencies": {
    "react-markdown": "^10.1.0"
  }
}
