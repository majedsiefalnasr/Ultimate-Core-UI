{
  "name": "@anchor/ui",
  "version": "0.1.0",
  "description": "Anchor UI Library is a Vue 3-based component library built on top of Vuetify for modern and responsive UIs.",
  "main": "dist/anchor-ui.umd.js",
  "module": "dist/anchor-ui.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "prepare": "husky install",
    "lint": "eslint --ext .js,.ts,.vue src --report-unused-disable-directives --max-warnings=0",
    "lint:fix": "eslint --ext .js,.ts,.vue src --fix",
    "format": "prettier --write \"src/**/*.{js,ts,vue,scss,css,json,md}\"",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest run",
    "test:watch": "vitest watch"
  },
  "peerDependencies": {
    "vue": "^3.5.0",
    "vuetify": "^3.7.0"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^9.1.10",
    "@storybook/addon-docs": "9.1.10",
    "@storybook/addon-links": "^9.1.10",
    "@storybook/vue3-vite": "^9.1.10",
    "@testing-library/vue": "^8.0.0",
    "@vitejs/plugin-vue": "^5.1.2",
    "@vue/test-utils": "^2.4.6",
    "sass": "^1.77.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "vue-eslint-parser": "^9.1.0",
    "eslint-plugin-vue": "^9.11.0",
    "prettier": "^3.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-import": "^2.29.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0",
    "typescript": "5.3.3",
    "vite": "^5.2.0",
    "vite-plugin-dts": "^4.0.0",
    "vitest": "^1.6.0"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{scss,css,json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "vue3",
    "vuetify",
    "ui-library",
    "vite",
    "storybook",
    "anchor-ui"
  ],
  "author": "Majed @Ultimate-Solutions",
  "license": "MIT",
  "packageManager": "npm@9.8.1"
}
